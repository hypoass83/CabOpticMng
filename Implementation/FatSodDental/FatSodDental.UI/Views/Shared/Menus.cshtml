@{
    var X = Html.X();
}
<style>
    .menu-icon-cls {
        min-height: 30px;
        min-width: 30px;
    }
</style>

@(


        //Ce panel permet d'avoir les menus d'un module
    X.Panel()
        .Layout(LayoutType.Column)
        //.BodyPadding(1)
        .ID("cool")
        //.Defaults(X.Parameter().Name("margins").Value("0 0 0 0").Mode(ParameterMode.Value))
        .MarginSpec("-4 0 0 0")
        .PaddingSpec("3 0 5 0")
        //.LayoutConfig(new ColumnLayoutConfig { Align = ColumnAlign.Middle, Pack = BoxPack.Start })
        .Height(100)
        .Border(false)
        .BodyStyle("background-color:#eee; background-image: url('../Content/Images/bground.png');")
        .Loader(
        //Chargement des menus d'un module
            X.ComponentLoader()
                .Url(Url.Action("GetMenusOfModule"))
                .Mode(LoadMode.Component)
                .Params(new Parameter("module", this.ViewBag.module))
        )
)
