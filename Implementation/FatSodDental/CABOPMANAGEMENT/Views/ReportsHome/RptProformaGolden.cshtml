            padding-bottom: 10px;
        }

        .invalid-data {
            border: 1px solid red;
        }

        .valid-data {
            border: 1px solid #ccc;
        }

        .ipt {
            margin-bottom: 6px;
        }

        #img-upload {
            width: 100%;
        }

