<script>

    $(document).on('ready', function () {


        $('#excelBtn').on('click', () => {
            $('#pdf').prop('hidden', true);
            $('#excel').prop('hidden', false);

            fillDatatable();
        });

    });

    function fillDatatable(test) {

        var receiptLines = @Html.Raw(Json.Encode(Model.ReceiptLines));

        if (test)
        {
            $('#mainTable').dataTable().fnDestroy();
        }
        var oTable = $('#mainTable');

        oTable = $('#mainTable').dataTable({
            fixedColumns: true,
            "paging": true,
            "pageLength": 4,
            "lengthMenu": [[4, 8, 12, -1], [4, 8, 12, "All"]],
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            // Ajax call
            "data": receiptLines,
            "columns": [
                { "data": "ReceiptLineID", "width": "7%" },
                { "data": "NumeroFacture", "width": "10%" },
                { "data": "TreatmentDate", "width": "10%" },
                { "data": "MatriculePatient", "width": "10%" },
                { "data": "ProducType", "width": "23%" },
                { "data": "MontantBrut", "width": "10%" },
                { "data": "TotalMalade", "width": "7%" },
                { "data": "DetailQty", "width": "13%" }
            ],
            dom: 'Bfrtip',
            buttons: [
                'copy', 'csv', 'excel'
            ]
        });
    }

</script>





