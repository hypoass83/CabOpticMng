<script>

    // Get the user List
    function populateUsers() {
        $.get('@Url.Action("populateUsers", "InventoryEntry")', {}, function (data) {
            $('#AutorizedByID').empty();
            $('#AutorizedByID').append($("<option value='0'>@Resources.Select</option>"));
            $.each(data, function (key, value) {
                $('#AutorizedByID').append($("<option></option>").val(value.GlobalPersonID).html(value.UserFullName));
            });
        }, 'json');
    }

    function enablebutton()
    {
        $('#btnPrint').prop('disabled', false);
    }
    function disablebutton() {
        $('#btnPrint').prop('disabled', true);
    }


    //chargement des commandes a valider
    function GetAllCommand(test) {

        if (test)
        {
            $('#mainTable').dataTable().fnDestroy();
        }
        var oTable = $('#mainTable');

        oTable = $('#mainTable').dataTable({

            fixedColumns: true,
            "paging": true,
            "pageLength": 3,
            "lengthMenu": [[3, 5, 10, -1], [3, 5, 10, "All"]],
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            // Ajax call
            "ajax": "@Url.Action("InventoryDirectoriesModel", "InventoryEntry")",
            "dom": '<"toolbar">frtip',
            "columns": [
                { "data": "InventoryDirectoryID", "width": "1%" },
                { "data": "Branch" },
                { "data": "InventoryDirectoryReference" },
                { "data": "InventoryDirectoryCreationDate" },
                { "data": "InventoryDirectoryDescription" },
                {// this is Actions Column
                    mRender: function (data, type, row) {
                        return '<a href="#" class="editor_remove" onclick="UpdateItem(' + row.InventoryDirectoryID + ')"><span class="glyphicon glyphicon-edit"></span></a>'
                    }
                }
            ]
        });
        var brefresh = '<a href="#" class="btn btn-primary" style="margin-left:40%;" onclick="RefreshGrid()"><span class="fa fa-refresh"></span></a>'
        $("div.toolbar").html(brefresh);
    }

    function clearInitializeCommandFields()
    {
        $('#BranchID').val('');
        $('#InventoryDirectoryID').val('');
        $('#InventoryDirectoryReference').val('');
        $('#InventoryDirectoryDescription').val('');
        $('#InventoryDirectoryDate').val('');
        $('#InventoryDirectoryCreationDate').val('');
        clearClickCommandFields();
    }

    function clearClickCommandFields() {

        $('#ProductID').val('');
        $('#LocalizationID').val('');
        $('#ProductLabelID').val('');
        $('#LocalizationLabelID').val('');
        $('#OldStockQuantity').val('0');
        $('#NewStockQuantity').val('0');
        $('#StockDifference').val('0');
    }
    function DeleteItem(obj) {
        var globalID = obj;

        $.get('@Url.Action("InitializeIDLineFieldsByIIDL", "InventoryEntry")', { InventoryDirectoryLineID: parseInt(globalID) }, function (data) {
            $.each(data, function (key, value) {
                $('#TMPID').val(value.TMPID);
                $('#InventoryDirectoryLineID').val(value.InventoryDirectoryLineID);
                $('#ProductID').val(value.ProductID);
                $('#LocalizationID').val(value.LocalizationID);
                $('#OldStockQuantity').val(value.OldStockQuantity);
                $('#NewStockQuantity').val(value.NewStockQuantity);
                $('#StockDifference').val(value.StockDifference);
                $('#ProductLabelID').val(value.ProductLabelID);
                $('#LocalizationLabelID').val(value.LocalizationLabelID);
            });
        }, 'json');

        //disablebutton();
    }

    function RemoveSRLine(obj)
    {
        var data = {
            TMPID: obj
        }
        //var data = obj;

        //post data to server
        $.ajax({
            url: '@Url.Action("RemoveSRLine", "InventoryEntry")',
            type: "POST",
            data: JSON.stringify(data), //formData, //formData,//
            dataType: "JSON",
            contentType: "application/json",
            success: function (d) {
                //check is successfully save to database
                if (d.status == true) {
                    GetCommandline(true);
                    GetFinalCommandline(true);
                    enablebutton();
                }
                else {
                    alert(d.Message);
                }
            },
            error: function (response) {
                alert('Error. Please try again.');
            }
        });

    }
    function UpdateItem(obj) {
        var globalID = obj;

        $.get('@Url.Action("InitializeFields", "InventoryEntry")', { InventoryDirectoryID: parseInt(globalID) }, function (data) {
            $.each(data, function (key, value) {
                $('#BranchID').val(value.BranchID);
                $('#InventoryDirectoryReference').val(value.InventoryDirectoryReference);
                $('#InventoryDirectoryCreationDate').val(value.InventoryDirectoryCreationDate);
                $('#InventoryDirectoryDescription').val(value.InventoryDirectoryDescription);
                $('#InventoryDirectoryDate').val(value.InventoryDirectoryDate);
                $('#InventoryDirectoryID').val(value.InventoryDirectoryID);
                GetCommandline(true)
            });
        }, 'json');

        disablebutton();

    }
    //chargement d'une commandes d'un client
    function GetCommandline(test) {

        if (test)
        {
            $('#CommandlineTable').dataTable().fnDestroy();
        }
        var oTable = $('#CommandlineTable');

        oTable = $('#CommandlineTable').dataTable({
            fixedColumns: true,
            "paging": true,
            "pageLength": 4,
            "lengthMenu": [[4, 8, 12, -1], [4, 8, 12, "All"]],
            "searching": false,
            "ordering": true,
            "pagingType": "full_numbers",
            // Ajax call
            "ajax": "@Url.Action("InitialInventoryDirectoryLines", "InventoryEntry")",
            "columnDefs": [
                    { "visible": false, "targets": 0 }
            ],
            "columns": [
                { "data": "InventoryDirectoryLineID", "width": "1%" },
                { "data": "ProductLabel","width": "50%" },
                { "data": "LocalizationLabel"},
                { "data": "OldStockQuantity"},
                {// this is Actions Column
                    mRender: function (data, type, row) {
                        return '<a href="#" class="editor_remove" onclick="DeleteItem(' + row.InventoryDirectoryLineID + ')"><span class="glyphicon glyphicon-edit"></span></a>'
                    }
                }
            ]
        });
    }



    function AddFinalInventoryDirectoryLine() {
        var isAllValid = true;
        if ($('#ProductID').val().trim() == '') {
            isAllValid = false;
            $("#ProductLabelID").addClass("invalid-data");
        }
        else {
            $("#ProductLabelID").addClass("valid-data");
        }
        if ($('#LocalizationID').val().trim() == '') {
            isAllValid = false;
            $("#LocalizationLabelID").addClass("invalid-data");
        }
        else {
            $("#LocalizationLabelID").addClass("valid-data");
        }
        if ($('#StockDifference').val().trim() == '0' || $('#StockDifference').val().trim() == '') {
            isAllValid = false;
            $("#NewStockQuantity").addClass("invalid-data");
        }
        else {
            $("#NewStockQuantity").addClass("valid-data");
        }
        if ($('#TMPID').val().trim() == '') {
            isAllValid = false;
        }
        if ($('#InventoryDirectoryLineID').val().trim() == '') {
            isAllValid = false;
        }
        if (isAllValid) {
            var data = {
                TMPID: $('#TMPID').val().trim(),
                InventoryDirectoryLineID: $('#InventoryDirectoryLineID').val().trim(),
                ProductID: $('#ProductID').val().trim(),
                LocalizationID: $('#LocalizationID').val().trim(),
                OldStockQuantity: $('#OldStockQuantity').val().trim(),
                NewStockQuantity: $('#NewStockQuantity').val().trim()
            }
            $(this).val('Please wait...');

            //post data to server
            $.ajax({
                url: '@Url.Action("AddFinalInventoryDirectoryLine", "InventoryEntry")',
                type: "POST",
                data: JSON.stringify(data), //formData, //formData,//
                dataType: "JSON",
                contentType: "application/json",
                //contentType: false,
                //processData: false,
                success: function (d) {
                    //check is successfully save to database
                    if (d.status == true) {
                        //will send status from server side
                        //alert(d.Message);
                        //reinitialisation des champs
                        clearClickCommandFields();
                        GetCommandline(true);
                        GetFinalCommandline(true);
                        enablebutton();
                    }
                    else {
                        alert(d.Message);
                    }
                },
                error: function (response) {
                    alert('Error. Please try again.');
                }
            });
        }
    }

    //chargement d'une commandes d'un client
    function GetFinalCommandline(test) {

        if (test)
        {
            $('#CommandlineTableNew').dataTable().fnDestroy();
        }
        var oTable = $('#CommandlineTableNew');

        oTable = $('#CommandlineTableNew').dataTable({
            fixedColumns: true,
            "paging": true,
            "pageLength": 4,
            "lengthMenu": [[4, 8, 12, -1], [4, 8, 12, "All"]],
            "searching": false,
            "ordering": true,
            "pagingType": "full_numbers",
            "columnDefs": [
                    { "visible": false, "targets": 0 }
            ],
            // Ajax call
            "ajax": "@Url.Action("FinalInventoryDirectoryLines", "InventoryEntry")",

            "columns": [
                { "data": "TMPID", "width": "1%" },
                { "data": "ProductLabel", "width": "50%" },
                { "data": "LocalizationLabel"},
                { "data": "OldStockQuantity" },
                { "data": "NewStockQuantity" },
                { "data": "StockDifference" },
                {// this is Actions Column
                    mRender: function (data, type, row) {
                        return '<a href="#" class="editor_remove" onclick="RemoveSRLine(' + row.TMPID + ')"><span class="glyphicon glyphicon-trash"></span></a>'
                    }
                }
            ]
    });
    }

    function CloseInventoryDirectory()
    {

        var isAllValid = true;
        var d = new Date();


        if ($('#BranchID').val().trim() == '') {
            isAllValid = false;
        }
        if ($('#InventoryDirectoryID').val().trim() == '') {
            isAllValid = false;
        }

        if ($('#AutorizedByID').val() == "0") {
            isAllValid = false;
            $("#AutorizedByID").addClass("invalid-data");
        }
        else {
            $("#AutorizedByID").addClass("valid-data");
        }

        if ($('#InventoryDirectoryReference').val() == '') {
            isAllValid = false;
            $("#InventoryDirectoryReference").addClass("invalid-data");
        }
        else {
            $("#InventoryDirectoryReference").addClass("valid-data");
        }
        if ($('#InventoryDirectoryCreationDate').val() == '') {
            isAllValid = false;
            $("#InventoryDirectoryCreationDate").addClass("invalid-data");
        }
        else {
            $("#InventoryDirectoryCreationDate").addClass("valid-data");
        }

        if ($('#InventoryDirectoryDate').val() == '') {
            isAllValid = false;
            $("#InventoryDirectoryDate").addClass("invalid-data");
        }
        else {
            $("#InventoryDirectoryDate").addClass("valid-data");
        }

        if ($('#InventoryDirectoryDescription').val() == '') {
            isAllValid = false;
            $("#InventoryDirectoryDescription").addClass("invalid-data");
        }
        else {
            $("#InventoryDirectoryDescription").addClass("valid-data");
        }

        if (isAllValid) {


            var data = {

                BranchID: $('#BranchID').val(),
                InventoryDirectoryReference: $('#InventoryDirectoryReference').val(),
                InventoryDirectoryCreationDate: $('#InventoryDirectoryCreationDate').val().trim(),
                RegisteredByID: $('#AutorizedByID').val(),
                InventoryDirectoryDate: $('#InventoryDirectoryDate').val().trim(),
                InventoryDirectoryDescription: $('#InventoryDirectoryDescription').val().trim(),
                InventoryDirectoryID:$('#InventoryDirectoryID').val().trim()
            }
            $(this).val('Please wait...');

            //post data to server
            $.ajax({
                url: '@Url.Action("CloseInventoryDirectory", "InventoryEntry")',
                type: "POST",
                data: JSON.stringify(data), //formData, //formData,//
                dataType: "JSON",
                contentType: "application/json",
                //contentType: false,
                //processData: false,
                success: function (d) {
                    //check is successfully save to database
                    if (d.status == true) {
                        //will send status from server side
                        alert(d.Message);
                        //reinitialisation des champs
                        clearInitializeCommandFields();
                        GetAllCommand(true);
                        GetFinalCommandline(true);
                        enablebutton();
                    }
                    else {
                        alert(d.Message);
                    }
                },
                error: function (response) {
                    alert('Error. Please try again.');
                }
            });
        }

    }
    function RefreshGrid()
    {
        clearInitializeCommandFields();
        GetAllCommand(true);
        GetFinalCommandline(true);
        enablebutton();
    }
    $(document).on('ready', function () {

        populateUsers();
        GetAllCommand(false);

        //chargement des ventes selectionnees
        GetCommandline(false);
        GetFinalCommandline(false);

        $('#NewStockQuantity').on('keyup', function () {
            StockDifference();
        });
        $('#btnCancel').on('click', function () {
            location.reload(true);
        });
        $('#ReduceBtn').on('click', function () {
            AddFinalInventoryDirectoryLine();
        });

        $('#Cancel2').on('click', function () {
            clearClickCommandFields();
        });

        $('#btnSubmit').on('click', function () {
            CloseInventoryDirectory();
        });

    });

    function StockDifference()
    {
        var NewStockQuantity = parseFloat($('#NewStockQuantity').val());
        var OldStockQuantity = parseFloat($('#OldStockQuantity').val());
        $('#StockDifference').val(NewStockQuantity + OldStockQuantity)
    }

</script>