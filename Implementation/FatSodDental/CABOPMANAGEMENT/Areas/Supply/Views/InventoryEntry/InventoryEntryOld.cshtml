@using FatSod.Ressources;
@using FatSod.Supply.Entities;
@using FatSod.DataContext.Initializer;

@{
    ViewBag.Title = @Resources.inventoryDirectoryList;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["Message"] != null)
{
    @Html.Raw(TempData["Message"])
}
<div class="box box-primary box-body">
    <div class="row">
        <div class="col-md-12">
            <fieldset>
                <div class="panel panel-default">
                    <div class="panel-body2">

                        <table class="table" id="mainTable">
                            <thead>
                                <tr class="dataTableHead">
                                    <th>ID</th>
                                    <th>@Resources.Branches</th>
                                    <th>@Resources.Reference</th>
                                    <th>@Resources.CreationDate</th>
                                    <th>@Resources.Description</th>
                                    <th>Action</th>
                                </tr>
                            </thead>

                        </table>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <fieldset style="margin-top:-25px">
                <div class="panel panel-default">
                    <div class="panel-body3">
                        <input class="form-control number" id="InventoryDirectoryID" name="InventoryDirectoryID" type="hidden">
                        <div class="row ipt" style="margin-left:1px;">
                            <div class="col-sm-2">@Resources.Branches</div>
                            <div class="col-sm-3" style="margin-left:-90px;">
                                <input class="form-control" id="BranchID" name="BranchID" readonly />
                            </div>
                            <div class="col-sm-2" style="margin-left:-10px;">@Resources.Reference</div>
                            <div class="col-sm-3" style="margin-left:-90px;">
                                <input class="form-control" id="InventoryDirectoryReference" name="InventoryDirectoryReference" readonly>
                            </div>
                            <div class="col-sm-2" style="margin-left:-10px;">@Resources.AutorizedBy</div>
                            <div class="col-sm-3" style="margin-left:-90px;">
                                <select class="form-control" id="AutorizedByID" name="AutorizedByID"> </select>
                            </div>
                        </div>
                        <div class="row ipt" style="margin-left:1px;">
                            <div class="col-sm-2">@Resources.CreationDate</div>
                            <div class="col-sm-3" style="margin-left:-90px;">
                                <input class="form-control" id="InventoryDirectoryCreationDate" name="InventoryDirectoryCreationDate" type="text" readonly>
                            </div>
                            <div class="col-sm-2" style="margin-left:-10px;">@Resources.UIDateOperation</div>
                            <div class="col-sm-3" style="margin-left:-90px;">
                                <input class="form-control" id="InventoryDirectoryDate" name="InventoryDirectoryDate" type="text" readonly />
                            </div>
                            <div class="col-sm-2" style="margin-left:-10px;">@Resources.Description</div>
                            <div class="col-sm-3" style="margin-left:-90px;">
                                <textarea class="form-control" id="InventoryDirectoryDescription" name="InventoryDirectoryDescription" type="text" readonly></textarea>
                            </div>
                        </div>
                    </div>

                </div>
            </fieldset>
        </div>
    </div>
    <div class="row">
        <div class="col-md-4">
            <fieldset style="margin-right:-35px;">
                <div class="panel panel-default">
                    <div class="panel-body4">
                        <table class="table" id="CommandlineTable">
                            <thead>
                                <tr class="dataTableHead">
                                    <th>ID</th>
                                    <th>@Resources.Designation</th>
                                    <th>@Resources.Localization</th>
                                    <th>@Resources.Quantity</th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-md-3">
            <fieldset>
                <div class="panel panel-default">
                    <div class="panel-body4">

                        <input class="form-control number" id="TMPID" type="hidden">
                        <input class="form-control number" id="InventoryDirectoryLineID" type="hidden">
                        <div class="row ipt" style="margin-top:10px;margin-left:5px;">
                            <div class="col-sm-12">
                                <input class="form-control number" id="ProductID" type="hidden" readonly>
                                <input class="form-control number" id="ProductLabelID" type="text" readonly>
                            </div>
                        </div>
                        <div class="row ipt" style="margin-top:10px;margin-left:5px;">
                            <div class="col-sm-12">
                                <input class="form-control number" id="LocalizationID" type="hidden" readonly>
                                <input class="form-control number" id="LocalizationLabelID" type="text" readonly>
                            </div>
                        </div>
                        <div class="row ipt" style="margin-top:10px;margin-left:5px;">
                            <div class="col-sm-5">@Resources.OldStockQuantity</div>
                            <div class="col-sm-5">
                                <input class="form-control" id="OldStockQuantity" type="text" readonly />
                            </div>
                        </div>

                        <div class="row ipt" style="margin-left:5px;">
                            <div class="col-sm-5">@Resources.StockQuantity</div>
                            <div class="col-sm-5">
                                <input class="form-control NumbersAndDecimal" id="NewStockQuantity" type="number" />
                            </div>
                        </div>
                        <div class="row  ipt" style="margin-left:5px;">
                            <div class="col-sm-5">@Resources.NewStockQuantity</div>
                            <div class="col-sm-5">
                                <input class="form-control" id="StockDifference" type="text" readonly />
                            </div>
                        </div>

                        <div class="row" style="margin-top:0px">
                            <div class="col-sm-5" style="margin-left:10%">
                                <button id="ReduceBtn" class="btn btn-primary btn-danger">@Resources.ValidateButton</button>
                            </div>
                            <div class="col-sm-5">
                                <button id="Cancel2" class="btn btn-primary btn-success">@Resources.Cancel</button>
                            </div>


                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
        <div class="col-md-5">
            <fieldset style="margin-left:-25px;">
                <div class="panel panel-default">
                    <div class="panel-body4">
                        <table class="table" id="CommandlineTableNew">
                            <thead>
                                <tr class="dataTableHead">
                                    <th>ID</th>
                                    <th>@Resources.Designation</th>
                                    <th>@Resources.Localization</th>
                                    <th>@Resources.OldStock</th>
                                    <th>@Resources.AddedStock</th>
                                    <th>@Resources.NewQty</th>
                                    <th></th>
                                </tr>
                            </thead>
                        </table>
                    </div>
                </div>
            </fieldset>
        </div>
    </div>

    <div class="row" style="margin-top:0px">
        <div class="col-sm-2" style="margin-left:10%">
            <button id="btnCancel" class="btn btn-primary btn-danger">@Resources.ResetButton</button>
        </div>
        <div class="col-sm-2">
            <button id="btnSubmit" class="btn btn-primary btn-success">@Resources.SaveButton</button>
        </div>
        <div class="col-sm-2">
        </div>

        <div class="col-sm-2">
            <button id="btnPrint" class="btn btn-primary" onclick="location.href='@Url.Action("RptDeliverOrder", "ReportsHome", new { area = "" })'"><i class="fa fa-print"></i> @Resources.UIPrint</button>
        </div>

    </div>
</div>

<!-- Css Begins Here -->

<style>
    .invalid-data {
        border: 1px solid red;
    }

    .valid-data {
        border: 1px solid #ccc;
    }

    .ipt {
        margin-bottom: 6px;
    }

    #img-upload {
        width: 100%;
    }

    /*Adding some css for looks good*/
    span.error {
        display: block;
        visibility: hidden;
        color: red;
        font-size: 90%;
    }

    #after_manual_posting_yes {
        margin-right: 15px;
    }

    fieldset {
        border: 1px solid #ddd !important;
        margin-left: 10px;
        min-width: 0;
        padding: 10px;
