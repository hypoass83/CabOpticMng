            $("#ProductGiftDate").addClass("valid-data");
        }
        if ($('#ProductGiftReference').val() == '') {
            isAllValid = false;
            $("#ProductGiftReference").addClass("invalid-data");
        }
        else {
            $("#ProductGiftReference").addClass("valid-data");
        }

        if ($('#BranchID').val().trim() == '') {
            isAllValid = false;
            $("#BranchID").addClass("invalid-data");
        }
