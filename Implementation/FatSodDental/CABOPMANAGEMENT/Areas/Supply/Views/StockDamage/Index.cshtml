    //chargement d'une commandes d'un client
    function LoadAllCommandLines(test, BranchID, ReloadProductDamageDate) {

        if (test)
        {
            $('#mainTable').dataTable().fnDestroy();
        }
        var oTable = $('#mainTable');

        oTable = $('#mainTable').dataTable({
            "paging": true,
            "pageLength": 4,
            "lengthMenu": [[4, 8, 12, -1], [4, 8, 12, "All"]],
            "searching": true,
            "ordering": true,
            "pagingType": "full_numbers",
            // Ajax call
            "ajax": {
                "url": "@Url.Action("GetAllPendingProductDamages", "StockDamage")",
                "type": "GET",
                "datatype": "json",
                "data": { BranchID: BranchID, ReloadProductDamageDate: ReloadProductDamageDate }
            },
            "columns": [
                { "data": "ProductDamageID" },
                { "data": "ProductDamageReference" },
                { "data": "ProductDamageDate", "width": "10%" },
                { "data": "Branch" },
                { "data": "AutorizedBy" },
                { "data": "RegisteredBy" },
                {// this is Actions Column
                    mRender: function (data, type, row)
                    {
                        var deleteOption = '@LoadAction.IsSubMenuActionAble(MenuAction.DELETE, @profile, CodeValue.Supply.StockDamage.CODE, db)';
                        var showDel=(deleteOption=='False') ? '<a href=# class="editor_remove" onclick="DeleteItem(this)"><span class="glyphicon glyphicon-trash"></span></a>':'';

                        var printOption = '@LoadAction.IsSubMenuActionAble(MenuAction.UPDATE, @profile, CodeValue.Supply.StockDamage.CODE, db)';
                        var showPrint=(printOption=='False') ? '<a href="@Url.Action("GenerateReceipt", "StockDamage", new { StockDamageID = -1 })" class="editor_remove"><span class="glyphicon glyphicon-print"></span></a>':'';
                        showPrint= showPrint.replace("-1", row.ProductDamageID);
                        return showDel+" | "+showPrint;
                    }
                }
            ]
    });
    }
