@using FatSod.Ressources;
@model IEnumerable<FatSod.Security.Entities.Branch>
@{
    ViewBag.Title = Resources.Branch;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/Scripts/AdminLTE/plugins/iCheck/square/red.css" rel="stylesheet" />
<link href="~/Scripts/AdminLTE/plugins/iCheck/minimal/minimal.css" rel="stylesheet" />
<script src="~/Scripts/AdminLTE/plugins/iCheck/icheck.min.js"></script>

@*<h2>@Resources.Branch</h2>*@

<div class="box box-primary box-body">
    <div class="row">
        <fieldset class="col-md-6">
            <legend>Agence Identification</legend>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row ipt">
                        <input type="hidden" class="form-control input-sm" name="BranchID" id="BranchID" />
                        <div class="col-sm-4">@Resources.UINom<code>(*)</code></div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control input-sm" name="BranchName" id="BranchName" />
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.Code<code>(*)</code></div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control input-sm" name="BranchCode" id="BranchCode" />
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.Description<code>(*)</code></div>
                        <div class="col-sm-8">
                            <textarea class="form-control input-sm" name="BranchDescription" id="BranchDescription"></textarea>
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.Abbreviation<code>(*)</code></div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control input-sm" name="BranchAbbreviation" id="BranchAbbreviation"  maxlength="10" />
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <fieldset class="col-md-6">
            <legend>Adress</legend>
            <div class="panel panel-default">
                <div class="panel-body">
                    <div class="row ipt">
                        <input type="hidden" class="form-control input-sm" name="AdressID" id="AdressID" />
                        <div class="col-sm-4">@Resources.PersonMobile<code>(*)</code></div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control input-sm" name="AdressPhoneNumber" id="AdressPhoneNumber" />
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.AdressCellNumber<code>(*)</code></div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control input-sm" name="AdressCellNumber" id="AdressCellNumber" />
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">Email<code>(*)</code></div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control input-sm" name="AdressEmail" id="AdressEmail" />
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.PersonBox<code>(*)</code></div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control input-sm" name="AdressPOBox" id="AdressPOBox"/>
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.AdressFullName<code>(*)</code></div>
                        <div class="col-sm-8">
                            <textarea class="form-control input-sm" name="AdressFullName" id="AdressFullName"></textarea>
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">Fax</div>
                        <div class="col-sm-8">
                            <input type="text" class="form-control input-sm" name="AdressFax" id="AdressFax" />
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.AdressCountry<code>(*)</code></div>
                        <div class="col-sm-5">
                            <select id="Country" name="Country" class="form-control"></select>
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.AdressRegion<code>(*)</code></div>
                        <div class="col-sm-5">
                            <select id="Region" name="Region" class="form-control"></select>
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.AdressTown<code>(*)</code></div>
                        <div class="col-sm-5">
                            <select id="Town" name="Town" class="form-control"></select>
                        </div>
                    </div>
                    <div class="row ipt">
                        <div class="col-sm-4">@Resources.AdressQuarter<code>(*)</code></div>
                        <div class="col-sm-5">
                            <select id="Quarter" name="QuarterID" class="form-control"></select>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
        <div class="col-sm-4">
            <button type="button" id="btnCancel" class="btn btn-primary">@Resources.ResetButton</button>
        </div>
        <div class="col-sm-8">
            <button type="submit" class="btn btn-primary" id="btnSubmit">@Resources.SaveButton</button>
        </div>
    </div>
</div>

