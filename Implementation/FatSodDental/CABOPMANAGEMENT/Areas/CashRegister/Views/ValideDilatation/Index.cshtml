        </div>
        <div class="col-sm-2">
            <button id="btnDeliveryOrder" class="btn btn-primary" onclick="location.href='@Url.Action("RptReceiptDetailOrther", "ReportsHome", new { area = ""})'"><i class="fa fa-print"></i> @Resources.PrintDatailReceipt</button>
        </div>
    </div>
</div>

