                            <thead>
                                <tr class="dataTableHead">
                                    <th>ID</th>
                                    <th>@Resources.UIDateOperation</th>
                                    <th>@Resources.CustorderEstimation</th>
                                    <th>@Resources.Commandref</th>
                                    <th>@Resources.Customer</th>
